@model IEnumerable<word_html_utility.Models.TemplateVersion>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FunctionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FunctionExample)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlternateExample)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FunctionDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string trimdescription = "";

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FunctionName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FunctionExample)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AlternateExample)
                </td>
                <td>
                    <a href="@Url.Content(item.ImagePath)" target="_blank"><img src="@Url.Content(item.ImagePath)" alt="" style="width: auto; height: 120px"></a>
                </td>
                <td>
                    @if (item.FunctionDescription.Length > 50)
                    {
                        trimdescription = item.FunctionDescription.Substring(0, 50);
                        <p>@trimdescription ... Details for more</p>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.FunctionDescription)
                    }
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
